{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "hooks:install": "bash ./scripts/install-hooks.sh",
    "commitlint:range": "bunx commitlint --config ./commitlint.config.cjs --from origin/main --to HEAD",
    "prepush:check": "bun run commitlint:range && bun run lint && bun run typecheck && bun run test:run && bun run build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.98.0",
    "drizzle-orm": "^0.45.1",
    "next": "16.1.6",
    "postgres": "^3.4.8",
    "razorpay": "^2.9.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "stripe": "^20.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20",
    "@commitlint/config-conventional": "^20",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^16",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28",
    "lint-staged": "^16",
    "prettier": "^3",
    "simple-git-hooks": "^2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "cd apps/web && bun run lint-staged",
    "pre-push": "cd apps/web && bun run prepush:check",
    "commit-msg": "MSG_FILE=\"$1\"; case \"$MSG_FILE\" in /*) ;; *) MSG_FILE=\"$(git rev-parse --show-toplevel)/$MSG_FILE\" ;; esac; cd apps/web && bunx commitlint --config ./commitlint.config.cjs --edit \"$MSG_FILE\""
  }
}
